{
  "version": 2,
  "builds": [
    {
      "src": "app.py",
      "use": "@vercel/python",
      "config": {
        "maxLambdaSize": "50mb",
        "runtime": "python3.12"
      }
    }
  ],
  "routes": [
    { "src": "/static/(.*)", "dest": "/static/$1" },
    { "src": "/(.*)", "dest": "/app.py" }
  ],
  "env": {
    "DEPLOY_MODE": "frontend",
    "FLASK_ENV": "production"
  },
  "installCommand": "pip install -r requirements-vercel.txt"
}
